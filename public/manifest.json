{
  "name": "PlayPet",
  "description": "Get your own virtual pet companion for your browser!",
  "version": "0.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "worker.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/images/**/*"
      ],
      "matches": [
        "https://*/*"
      ]
    }
  ]
}
